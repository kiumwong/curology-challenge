{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "proxy": "http://localhost:5678",
  "scripts": {
    "start": "babel-node ./api/index.js",
    "build:fixBabelissues": "rm -rf ./build && babel -d ./build ./api -s",
    "dev": "nodemon --exec babel-node ./api/index.js",
    "dev2": "concurrently --names \"React,Express\" --prefix-colors \"green,blue\" \"cd ./client && npm run start\" \"npm run dev\"",
    "sequelize": "cross-env NODE_PATH=. sequelize",
    "format": "prettier --write \"**/*.+(js|jsx|json|css|md)\"",
    "test": "export NODE_ENV=test && sequelize db:migrate:undo:all  && sequelize db:migrate  && nyc --require @babel/register  mocha ./api/test/test.js --timeout 20000 --exit",
    "routes": "DEBUG=*:* npm run dev",
    "heroku-postbuild": "cd ./client && npm install && npm run build && npm build:fixBabelissues"  
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "pg": "^8.4.1",
    "pg-hstore": "^2.3.3",
    "prettier": "^2.1.2",
    "sequelize": "^6.3.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "@babel/runtime": "^7.11.2",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0"
  }
}
